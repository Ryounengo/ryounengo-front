{
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-native",
    "lib": ["dom", "ESNext"],
    "types" : ["jest", "node"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl" : "./",
    "paths": {
      "rtl-config": ["./testConfiguration/rtl-config"]
    },
    "typeRoots": ["./src/types"]
  },
  "exclude": ["./node_modules", "babel.config.js", "metro.config.js"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./index.tsx", "./testConfiguration/**/*"]
}
