{
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-native",
    "lib": ["dom", "ESNext"],
    "types" : ["jest", "node"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl" : "./",
    "paths": {
      "rtl-config": ["testConfiguration/rtl-config"],
      "@navigation/*": ["src/navigation/*"],
      "@typings/*": ["src/typings/*"],
      "@common": ["src/common/index.ts"],
      "@static/*": ["src/static/*"],
      "@routes": ["src/routes/index.ts"],
      "@mappers/*": ["src/mappers/*"],
      "@utils/*": ["src/utils/*"],
      "@screens/*": ["src/screens/*"]
    },
    "typeRoots": ["./src/typings", "node_modules/@types"]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./index.tsx",
    "./testConfiguration/**/*",
    "./*.js"
  ],
}
